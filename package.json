{
  "name": "repos",
  "version": "1.0.1",
  "description": "A CLI tool for managing multiple git repositories",
  "type": "module",
  "bin": {
    "repos": "./bin/repos"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile repos",
    "build:all": "bun run build:macos-arm64 && bun run build:macos-x64 && bun run build:linux-x64 && bun run build:windows-x64",
    "build:macos-arm64": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/repos-macos-arm64",
    "build:macos-x64": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile dist/repos-macos-x64",
    "build:linux-x64": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile dist/repos-linux-x64",
    "build:windows-x64": "bun build ./src/index.ts --compile --target=bun-windows-x64 --outfile dist/repos-windows-x64.exe",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test src/lib",
    "test:component": "bun test src/commands",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.3",
    "ink-testing-library": "^4.0.0",
    "react-devtools-core": "7.0.1",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "cli",
    "git",
    "repositories",
    "monorepo",
    "github"
  ],
  "author": "",
  "license": "MIT"
}
